
<h1><%= title %></h1>

    <%- messages() %> 


    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
<fieldset>
    <form id="loginForm" action="/account/login" method="post">
        <label for="email">Email</label>
        <input type="email" id="account_email" name="account_email"  placeholder="Enter a valid email address" required value="<%= locals.account_email %>">
        <label for="pw">Password</label>
        <input type="password" id="account_password" name="account_password" pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@!%*#?&])[A-Za-z\d@!%*#?&]{12,}" required>
        <div class="pw-requirements">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</div>
        <input type="submit" id="submit" value="Login">
    </form> 
    <p>No Account? <a href="/account/register" class="sign-up">Sign-up</a></p>

</fieldset>