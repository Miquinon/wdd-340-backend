<h1><%= title %></h1>

    <%- messages() %> 

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <% if (errors) { %>
    <ul class="message warning">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <% if (res.locals.accountData.account_type === "Client") { %>
   <h2>Welcome <%= res.locals.accountData.account_firstname %></h2>
 <% } else if (res.locals.accountData.account_type === "Employee" || res.locals.accountData.account_type === "Admin") { %>
   <h2>Welcome <%= res.locals.accountData.account_firstname %></h2>
   <h3>Inventory Management</h3>
   <p><a href="/inv/management" title="Manage Inventory">Manage Inventory</a></p>
 <% } %>

<p><a href="/account/update/<%- res.locals.accountData.account_id %>">
   Update Account information</a></p>
<p><a href="/account/delete-confirm/<%- res.locals.accountData.account_id %>">
   Delete Account </a></p>