<h1><%= title %></h1>

    <%- messages() %> 


    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

 
 <fieldset id="update-inventory">        
    <form action="/inv/edit-inventory" id="updateForm" method="post">   

         <label for="classificationList">Classification</label>           
          <%- classificationSelect %>                        
         <label for="make">Make</label>            
         <input type="text" id="make" name="inv_make" value="<%= locals.inv_make %>" required placeholder="3 character minimum">            
         
         <label for="model">Model</label>            
         <input type="text" id="model" name="inv_model" value="<%= locals.inv_model %>" required placeholder="3 character minimum">            
         
         <label for="description">Description</label>            
         <textarea id="inv_description" name="inv_description" value="<%= locals.inv_description %> required" placeholder="Write description here"></textarea>           
         
         <label for="image-path">Image Path</label>            
         <input type="text" id="image" name="inv_image" value="<%= locals.inv_image %>" required placeholder="/images/vehicles/no-image.png">            
         
         <label for="tn-path">Thumbnail Path</label>           
         <input type="text" id="thumbnail" name="inv_thumbnail" value="<%= locals.inv_thumbnail %>" required placeholder="/images/vehicles/no-image-tn.png">           
        
         <label for="price">Price</label>            
        <input type="number" name="inv_price" id="price" value="<%= locals.inv_price %>" required>           
        
        <label for="year">Year</label>            
        <input type="number" name="inv_year" id="year" value="<%= locals.inv_year %>" required>            
        
        <label for="miles">Miles</label>            
        <input type="number" name="inv_miles" id="miles" value="<%= locals.inv_miles %>" required>           
        
        <label for="color">Color</label>            
        <input type="text" name="inv_color" id="color" value="<%= locals.inv_color %>" required>    
    
        <input type="submit" disabled id="update-inv" value="Update Vehicle">

        <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

        </form>
    </fieldset>  
    <script src="../../js/inv-update.js"></script>